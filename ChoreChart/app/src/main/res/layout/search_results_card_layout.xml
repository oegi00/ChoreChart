<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view"
        android:layout_margin="12dp"
        app:cardBackgroundColor="#00b3ff"
        app:cardCornerRadius="12dp"
        app:cardElevation="3dp"
        app:contentPadding="4dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/card_layout_chore_name"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:text="Chore"
                android:textSize="20dp"
                android:layout_marginStart="8dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/card_layout_done_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="330dp"
                android:clickable="true"
                android:layout_marginTop="1dp"
                app:backgroundTint="#06c219"
                app:ensureMinTouchTargetSize="false"
                app:fabCustomSize="32dp"
                app:srcCompat="@drawable/outline_done" />

            <TextView
                android:id="@+id/card_layout_search_assignee"
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_layout_search_description"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:text="TextView"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/card_layout_search_location"
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_layout_search_description"
                android:layout_marginStart="132dp"
                android:layout_marginTop="4dp"
                android:text="TextView"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/card_layout_search_deadline"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_layout_search_description"
                android:layout_marginStart="260dp"
                android:layout_marginTop="4dp"
                android:text="TextView"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/card_layout_search_description"
                android:layout_width="366dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_layout_chore_name"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                android:textSize="14dp" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>


