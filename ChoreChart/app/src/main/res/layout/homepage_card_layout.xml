<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="420dp"
        android:layout_height="wrap_content"
        android:id="@+id/homepage_card_view"
        app:cardBackgroundColor="#00b3f0"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:id="@+id/homescreen_chore_title"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:text="Chore 1"
                android:textColor="@color/black"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/homescreen_chore_deadline"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/homescreen_chore_title"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:text="Due: 12/31/2023"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/homescreen_profile_button"
                android:background="#00b3ff"
                android:layout_marginStart="280dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/homescreen_toolbar_user_icon"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/homescreen_chore_completed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="350dp"
                android:clickable="true"
                android:layout_marginTop="6dp"
                app:backgroundTint="#06c219"
                app:ensureMinTouchTargetSize="false"
                app:fabCustomSize="44dp"
                app:srcCompat="@drawable/outline_done" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>